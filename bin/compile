#!/bin/sh

build_dir=$1
cache_dir=$2
env_dir=$3

whitelist_regex=${2:-''}
blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
if [ -d "$env_dir" ]; then
    for e in $(ls $env_dir); do
        export "$e=$(cat $env_dir/$e)";
    done
fi

mkdir '/zero'
cd '/zero'

echo "Setup microservices"
python3 -m virtualenv microservices
source microservices/bin/activate
export DEPLOY_APP='microservices'
git clone $GIT_URL $PROJECT_NAME
mkdir microservices
mv $PROJECT_NAME/* microservices/
cd microservices
git checkout $DEPLOY_BRANCH
gunicorn -b localhost:5800 skills.wsgi &
deactivate

echo "Setup experience"
python3 -m virtualenv experience
source experience/bin/activate
export DEPLOY_APP='experience'
git clone $GIT_URL $PROJECT_NAME
mkdir experience
mv $PROJECT_NAME/* experience/
cd experience
git checkout $DEPLOY_BRANCH
gunicorn skills.wsgi &
deactivate