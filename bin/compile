#!/bin/sh

build_dir=$1
cache_dir=$2
env_dir=$3

whitelist_regex=${2:-''}
blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
if [ -d "$env_dir" ]; then
    for e in $(ls $env_dir); do
        export "$e=$(cat $env_dir/$e)";
    done
fi

mkdir "$1/zero"
cd "$1/zero"

echo "Setup microservices"
git clone $GIT_URL $PROJECT_NAME
mkdir microservices
mv $PROJECT_NAME/* microservices/
cd microservices
python3 -m virtualenv env
source env/bin/activate
export DEPLOY_APP='microservices'
git checkout $DEPLOY_BRANCH
gunicorn -b localhost:5800 skills.wsgi &
deactivate

echo "Setup experience"
git clone $GIT_URL $PROJECT_NAME
mkdir experiences
mv $PROJECT_NAME/* experiences/
cd experiences
python3 -m virtualenv env
source env/bin/activate
export DEPLOY_APP='experiences'
git checkout $DEPLOY_BRANCH
gunicorn -b localhost:5800 skills.wsgi &
deactivate